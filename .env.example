# üîê ScholarLink Environment Variables - Production Template

# ============================================================================
# DATABASE CONFIGURATION (Required)
# ============================================================================
DATABASE_URL="postgresql://user:password@host:5432/scholarlink"
PGHOST="localhost"
PGPORT="5432"
PGUSER="scholarlink_user"
PGPASSWORD="secure_password_here"
PGDATABASE="scholarlink_prod"

# ============================================================================
# AUTHENTICATION (Required - Replit OIDC)
# ============================================================================
REPL_ID="your-repl-id"
SESSION_SECRET="generate_strong_random_secret_256_bits_minimum"
REPLIT_DOMAINS="your-domain.replit.app"
ISSUER_URL="https://auth.replit.com"

# ============================================================================
# PAYMENT PROCESSING (Required - Stripe)
# ============================================================================
# Production keys (keep secure!)
STRIPE_SECRET_KEY="sk_live_..."
VITE_STRIPE_PUBLIC_KEY="pk_live_..."

# Test keys (for development/staging)
TESTING_STRIPE_SECRET_KEY="sk_test_..."
TESTING_VITE_STRIPE_PUBLIC_KEY="pk_test_..."

# ============================================================================
# AI SERVICES (Required - OpenAI)
# ============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"

# ============================================================================
# CLOUD STORAGE (Required - Google Cloud)
# ============================================================================
DEFAULT_OBJECT_STORAGE_BUCKET_ID="bucket-id"
PRIVATE_OBJECT_DIR="path/to/private/objects"
PUBLIC_OBJECT_SEARCH_PATHS="path/to/public/objects"

# ============================================================================
# AGENT BRIDGE (Optional - Microservices)
# ============================================================================
COMMAND_CENTER_URL="https://auto-com-center-jamarrlmayes.replit.app"
SHARED_SECRET="your-shared-secret-for-orchestration"
AGENT_NAME="student_pilot"
AGENT_ID="student-pilot"
AGENT_BASE_URL="https://your-app.replit.app"

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================
NODE_ENV="production"
PORT="5000"
APP_VERSION="1.0.0"

# Security & Performance
ALLOWED_ORIGINS="https://your-domain.com"
CORS_ENABLED="true"
RATE_LIMIT_ENABLED="true"
LOG_LEVEL="info"

# Monitoring (Optional)
SENTRY_DSN="https://your-sentry-dsn"
MONITORING_ENABLED="true"

# ============================================================================
# DEVELOPMENT OVERRIDES (Local development only)
# ============================================================================
# Uncomment for local development:
# NODE_ENV="development"
# LOG_LEVEL="debug"
# CORS_ENABLED="false"